<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LV.LVPage">

    <StackLayout x:Name="stack">
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <StackLayout Orientation="Horizontal">
            <Button Text="Push" Clicked="OnPushClicked" x:Name="push_btn"/>
            <Button Text="Pop" Clicked="OnPopClicked" x:Name="pop_btn"/>
        </StackLayout>
        <ListView></ListView>
        <CollectionView></CollectionView>
        <GroupableItemsView></GroupableItemsView>
        <SelectableItemsView></SelectableItemsView>
        <StructuredItemsView></StructuredItemsView>
    </StackLayout>

</ContentPage>
